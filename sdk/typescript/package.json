{
  "name": "@auth-platform/sdk",
  "version": "0.2.0",
  "description": "Auth Platform TypeScript SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "auth",
    "authentication",
    "oauth",
    "oauth2.1",
    "pkce",
    "passkeys",
    "webauthn",
    "caep",
    "sse"
  ],
  "author": "Auth Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.15.0",
    "fast-check": "^3.23.0",
    "rimraf": "^6.0.0",
    "tsdown": "^0.4.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "jose": "^6.0.0"
  },
  "peerDependencies": {
    "@simplewebauthn/browser": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "@simplewebauthn/browser": {
      "optional": true
    }
  }
}
