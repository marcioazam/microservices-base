{
  "name": "@auth-platform/image-processing-service",
  "version": "2.0.0",
  "description": "Image processing microservice for Auth Platform - Modernized 2025",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:worker": "ts-node-dev --respawn src/worker.ts",
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --run",
    "test:property": "jest --testPathPattern=property --run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^5.1.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "sharp": "^0.33.5",
    "bullmq": "^5.25.0",
    "ioredis": "^5.4.1",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.0.3",
    "zod": "^3.24.1",
    "prom-client": "^15.1.3",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/auto-instrumentations-node": "^0.54.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/resources": "^1.30.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.30.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "fast-check": "^3.23.2",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
