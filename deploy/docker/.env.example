# ============================================
# Auth Platform - Environment Variables Template
# Copy this file to .env and fill in the values
# ============================================

# ============================================
# General Configuration
# ============================================
VERSION=latest
LOG_LEVEL=info

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your-secure-redis-password-here

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=your-secure-rabbitmq-password-here

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-secure-jwt-secret-here

# ============================================
# Encryption Configuration
# ============================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-secure-encryption-key-here

# ============================================
# Elasticsearch Configuration
# ============================================
# SECURITY: Elasticsearch password for 'elastic' superuser
# Generate with: openssl rand -base64 32
# IMPORTANT: Change this from default 'changeme'!
ELASTICSEARCH_PASSWORD=your-secure-elasticsearch-password-here

# ============================================
# Grafana Configuration
# ============================================
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here

# ============================================
# OpenTelemetry Configuration
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=auth-platform

# ============================================
# Environment-Specific Settings
# ============================================
# Set to: development, staging, production
ENVIRONMENT=development

# ============================================
# External Services (Production Only)
# ============================================
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your-vault-token-here

# ============================================
# TLS Configuration (Production Only)
# ============================================
# TLS_CERT_PATH=/etc/ssl/certs/server.crt
# TLS_KEY_PATH=/etc/ssl/private/server.key

# ============================================
# Alert Notifications (Production Only)
# ============================================
# PAGERDUTY_SERVICE_KEY=your-pagerduty-key-here
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
