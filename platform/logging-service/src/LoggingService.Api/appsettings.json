{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "LoggingService": {
    "ElasticSearch": {
      "Nodes": ["http://localhost:9200"],
      "IndexPrefix": "logs",
      "NumberOfShards": 3,
      "NumberOfReplicas": 1
    },
    "Queue": {
      "ConnectionString": "amqp://guest:guest@localhost:5672",
      "QueueName": "logs-ingestion",
      "MaxQueueSize": 100000,
      "BatchSize": 100,
      "ProcessingIntervalMs": 100
    },
    "Retention": {
      "DebugRetentionDays": 7,
      "InfoRetentionDays": 30,
      "WarnRetentionDays": 90,
      "ErrorRetentionDays": 365,
      "FatalRetentionDays": 365,
      "ArchiveBeforeDelete": true
    },
    "Security": {
      "RequireTls": true,
      "EncryptAtRest": true,
      "PiiPatterns": ["email", "phone", "ip", "ssn"],
      "MaskingMode": "Redact"
    }
  },
  "Otlp": {
    "Endpoint": "http://localhost:4317"
  }
}
